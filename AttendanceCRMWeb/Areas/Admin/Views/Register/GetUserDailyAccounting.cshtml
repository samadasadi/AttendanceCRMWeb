@using Utility.Utitlies
@model ViewModel.UserManagement.DailyOfficeReceiptsVm

@{

}

@if (Model != null)
{
    <div class=" ">
        <div class="card-header border-0 ">

            @*<img src="/Media/logo.png" style="width:25px;float:right;margin-left:5px;">*@
            <a target="_blank" class="card-title">مجموع کارکرد و دریافتی امروز کاربر</a>
        </div>
        <div class="card-body">


            <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                <p class="d-flex flex-column text-right"><span class="text-muted">تعداد درمان :</span></p>
                <p class="text-primary ">@Model.TreatmentCount.ToPrice()</p>
            </div>
            <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                <p class="d-flex flex-column text-right"><span class="text-muted">تعداد پرداختی :</span></p>
                <p class="text-primary ">@Model.PaymentCount.ToPrice()</p>
            </div>
            <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                <p class="d-flex flex-column text-right"><span class="text-muted">مجموع کارکرد :</span></p>
                <p class="text-danger ">@Model.Price.ToPrice()</p>
            </div>
            <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                <p class="d-flex flex-column text-right"><span class="text-muted">مجموع دریافتی :</span></p>
                <p class="text-success ">@Model.importprice.ToPrice()</p>
            </div>


        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-0">
        <p class="d-flex flex-column text-center">
            <span class="text-muted">داده ای برای نمایش وجود ندارد</span>
        </p>
    </div>
}