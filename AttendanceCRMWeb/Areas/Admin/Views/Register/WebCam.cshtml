<input type="hidden" name="WebCamBase64" id="WebCamBase64" value="" />

@*<div id="results">Your captured image will appear here...</div>*@
<div id="my_camera" style="float:left; margin-left: 79px;margin-top: -4px;">

</div>
<script src="~/Scripts/WebCam/webcam.js?v=0"></script>
<script language="JavaScript">
    Webcam.set({
        width: 320,
        height: 200,
        image_format: 'jpeg',
        margin: 142,
        jpeg_quality: 90
    });
    Webcam.attach('#my_camera');

    function take_snapshot() {
        
        Webcam.snap(function (data_uri) {
            
            $(".selectImageWebcame").html('<img src="' + data_uri + '"/>')

            $("#WebCamBase64").val(data_uri);            
        });
    }

    $("video").css("height", "170px");
    $("video").css("width","578px");
</script>
