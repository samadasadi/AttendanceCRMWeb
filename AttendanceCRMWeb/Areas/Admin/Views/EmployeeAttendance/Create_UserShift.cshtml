@using Utility
@using System
@using System.Collections.Generic
@using AttendanceCRMWeb.Helpers
@using AttendanceCRMWeb.Helpers.Enum
@using ViewModel.UserManagement.Attendance;
@model  Utility.Utitlies.viewModel<PubUser_ShiftVm>

@{
    var i = 0;
}

<form id="PubUserShiftFrm" class="col-md-12 form-horizontal">
    <div class="col-md-12">

        @if (Model != null)
        {
            @Html.HiddenFor(m => m.T_model.Id)
        }
        <div class="col-md-6">
            @Html.EditorFor(x => x.T_model.ShiftWork_Id)

            @Html.EditorFor(x => x.T_model.PuUser_Id)

            <div class="form-group">
                <input class="rbStatusE col-sm-2" id="1" name="T_model.Type" type="radio" value="1" checked="checked">
                <label for="1">انتساب به شخص</label>
                <br>
                <input class="rbStatusE col-sm-2" id="2" name="T_model.Type" type="radio" value="2">
                <label for="2">انتساب به همه پرسنل</label>
                <br>
                <input class="rbStatusE col-sm-2" id="3" name="T_model.Type" type="radio" value="3">
                <label for="3">اننتساب به افرادی که شیفت کاری ندارند</label>
                <br>
            </div>

        </div>
        <div class="col-md-6">


        </div>
    </div>
    <div class="form-group">
        <div class="row" style="float:left;margin-left:10px;">
            <div style="float:left;padding:5px;min-width: 135px;">
                <a class="btn btn-block bg-gradient-secondary btn-flat OperationButton" onclick="CreateUserShift()">
                    <i class="fa fa-plus"></i>
                    مورد جدید
                </a>
            </div>
            <div style="float:left;padding:5px;min-width: 135px;">
                <a class="btn btn-block bg-gradient-success btn-flat OperationButton" onclick="Save_UserShift()">
                    <i class="fa fa-save"></i>
                    ذخیره
                </a>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">


    $(function () {
        $(".select2").select2();
    });


</script>

