@using Utility
@using System
@using System.Collections.Generic
@using AttendanceCRMWeb.Helpers
@using AttendanceCRMWeb.Helpers.Enum
@using ViewModel.UserManagement.Attendance;
@model  Utility.Utitlies.viewModel<TimeRecordVm>

@{
    var i = 0;
}

<form id="AttLogFrm" class="col-md-12 form-horizontal">
    <div class="col-md-12">

        @if (Model != null)
        {
            @Html.HiddenFor(m => m.T_model.RecordID)
        }
        <div class="col-md-6">
            @Html.EditorFor(x => x.T_model.CardNo)
            @Html.EditorFor(x => x.T_model.DatetimeIO)
            <div class="form-group row">
                <label class="control-label col-form-label col-md-3 text-right" for="Week0">ساعت</label>
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.T_model.Time_Value)
                </div>
            </div>

        </div>
        <div class="col-md-6">
        </div>
    </div>
    <div class="form-group">
        <div class="row" style="float:left;margin-left:10px;">
            <div style="float:left;padding:5px;min-width: 135px;">
                <a class="btn btn-block bg-gradient-secondary btn-flat OperationButton" onclick="CreateAttLog()">
                    <i class="fa fa-plus"></i>
                    مورد جدید
                </a>
            </div>
            <div style="float:left;padding:5px;min-width: 135px;">
                <a class="btn btn-block bg-gradient-success btn-flat OperationButton" onclick="Save_AttLog()">
                    <i class="fa fa-save"></i>
                    ذخیره
                </a>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">


    $(function () {
        $(".select2").select2();
    });


</script>

