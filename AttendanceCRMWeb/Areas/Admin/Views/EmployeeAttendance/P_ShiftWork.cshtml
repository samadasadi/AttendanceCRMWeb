@using ViewModel.UserManagement.Attendance;

@model  Utility.Utitlies.viewModel<ShiftWorkVm>
@{
    var formSecurity = (ViewModel.Security.FormSecurity)ViewBag.FormSecurity;
}



<table class="table table-hover text-nowrap">
    <thead>
        <tr>
            <th>عملیات</th>
            <th>عنوان</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model.TLists)
            {
                <tr>
                    <td style="vertical-align:middle; min-width:100px;">
                        <a class="btn btn-danger btn-sm" onclick="DeleteShiftWork('@item.Id')" title="حذف"> <span class="fa fa-trash"></span> </a>
                        <a class="btn btn-primary btn-sm" onclick="EditShiftWork('@item.Id')" title="ویرایش"> <span class="fa fa-trash"></span> ویرایش </a>
                    </td>
                    <td class="mailbox-name" style="vertical-align:middle; min-width:100px;"><a>@item.ShiftName</a></td>
                </tr>
            }
        }
    </tbody>
</table>

@Html.Partial(Utility.Utitlies.VaribleForName.NamePartialOperationPageing, Model.CommonCustomViewTablePaging)




