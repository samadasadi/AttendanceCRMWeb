@using Utility
@using System
@using System.Collections.Generic
@using AttendanceCRMWeb.Helpers
@using AttendanceCRMWeb.Helpers.Enum
@using ViewModel.UserManagement.Attendance;
@model  Utility.Utitlies.viewModel<ShiftWorkVm>

@{
    var i = 0;
}
@*<link href="~/Content/AdminResponsive3.0/plugins/fullcalendar/main.css" rel="stylesheet" />*@

<form id="ShiftWorkFrm" class="col-md-12 form-horizontal">

    <div class="col-md-12">

        @if (Model != null)
        {
            @Html.HiddenFor(m => m.T_model.Id)
        }
        <div class="col-md-6">
            @Html.EditorFor(x => x.T_model.Calendar_Id)
            @Html.EditorFor(x => x.T_model.ShiftName)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(x => x.T_model.jobTimevm)
            @Html.EditorFor(x => x.T_model.JobTime_FromDate)
            @Html.EditorFor(x => x.T_model.JobTime_ToDate)
            <div class="form-group">
                <div class="row" style="float:left;margin-left:10px;">
                    <div style="float:left;padding:5px;">
                        <a class="btn btn-block bg-gradient-primary btn-flat" onclick="SetJobTimeForDays()">
                            انتساب
                        </a>
                    </div>
                    <div style="float:left;padding:5px;">
                        <a class="btn btn-block bg-gradient-danger btn-flat" onclick="RemoveJobTimeForDays()">
                            لغو انتساب
                        </a>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <div class="col-md-12" id="LoadCalendar" style=" overflow-x: auto;">
    </div>

    <div class="form-group">
        <div class="row" style="float:left;margin-left:10px;">
            <div style="float:left;padding:5px;min-width: 135px;">
                <a class="btn btn-block bg-gradient-secondary btn-flat OperationButton" onclick="CreateShiftWork()">
                    <i class="fa fa-plus"></i>
                    مورد جدید
                </a>
            </div>
            <div style="float:left;padding:5px;min-width: 135px;">
                <a class="btn btn-block bg-gradient-success btn-flat OperationButton" onclick="Save_ShiftWork()">
                    <i class="fa fa-save"></i>
                    ذخیره شیفت کاری
                </a>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">


    $(function () {
        $(".select2").select2();
    });

    $("#T_model_Calendar_Id").change(function () {
        
        LoadCalendar();
    });


</script>

