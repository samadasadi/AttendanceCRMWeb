@using Utility
@using System
@using System.Collections.Generic
@using AttendanceCRMWeb.Helpers
@using AttendanceCRMWeb.Helpers.Enum
@using ViewModel.UserManagement.Attendance;
@model  Utility.Utitlies.viewModel<JobTimeVm>

@{
    var i = 0;
}

<form id="JobTimeFrm" class="col-md-12 form-horizontal">
    <div class="col-md-12">

        @if (Model != null)
        {
            @Html.HiddenFor(m => m.T_model.Id)
        }
        <div class="col-md-6">
            @Html.EditorFor(x => x.T_model.JobTimeName)
            @Html.EditorFor(x => x.T_model.Explain)


            @Html.EditorFor(x => x.T_model.ShiftShenavar)
            <div class="form-group row">
                <label class="control-label col-form-label col-md-3 text-right" for="Week0">طول شیفت</label>
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.T_model.TimeShenavar)
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <label class="control-label col-form-label col-md-3 text-right" for="Week0">زمان ورود</label>
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.T_model.TimeVorod_Value)
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-form-label col-md-3 text-right" for="Week0">فرجه ورود</label>
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.T_model.TimeFVorod_Value)
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-form-label col-md-3 text-right" for="Week0">زمان خروج</label>
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.T_model.TimeKhoroj_Value)
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-form-label col-md-3 text-right" for="Week0">فرجه خروج</label>
                <div class="col-sm-9">
                    @Html.EditorFor(m => m.T_model.TimeFKhoroj_Value)
                </div>
            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="row" style="float:left;margin-left:10px;">
            <div style="float:left;padding:5px;min-width: 135px;">
                <a class="btn btn-block bg-gradient-secondary btn-flat OperationButton" onclick="CreateJobTime()">
                    <i class="fa fa-plus"></i>
                    مورد جدید
                </a>
            </div>
            <div style="float:left;padding:5px;min-width: 135px;">
                <a class="btn btn-block bg-gradient-success btn-flat OperationButton" onclick="Save_JobTime()">
                    <i class="fa fa-save"></i>
                    ذخیره ساعت کاری
                </a>
            </div>
        </div>
    </div>
</form>

<script type="text/javascript">


    $(function () {
        $(".select2").select2();
    });


</script>

