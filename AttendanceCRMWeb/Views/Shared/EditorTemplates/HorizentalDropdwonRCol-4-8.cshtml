@model object
@{
    var required = ViewData.ModelMetadata.IsRequired;
}
<div class="form-group  row @string.Format("{0}",required?"rqd":"")">
    @Html.LabelFor(model => model, htmlAttributes: new { @class = "text-AlignBySoftWare col-md-4" })
    <div class="col-sm-8 text-right">
        @if (ViewData[ViewData.ModelMetadata.PropertyName] != null)
        {
            @Html.DropDownListFor(model => model, (SelectList)ViewData[ViewData.ModelMetadata.PropertyName], "--", new { @class = "form-control select2" , style="width:100%;" })
        }
        else
        {
            @Html.DropDownListFor(model => model, new List<SelectListItem>() { }, "--", new { @class = "form-control select2", style = "width:100%;" })
        }
        @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
    </div>
</div>